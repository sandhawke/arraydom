#!/usr/bin/env node
'use strict'  // -*-mode: javascript -*-

const program = require('commander')
const package_json = require('../package.json')
const debug = require('debug')('lazydom.to-json')
const lazydom = require('../index')

program
  .version(package_json.version)
  .usage('< input-html-file > output-json-file')
  .parse(process.argv)

if (program.args.length !== 0) {
  program.outputHelp()
  process.exit(-1)
}

let buf = ''
process.stdin.setEncoding('utf8');
process.stdin.on('readable', () => {
  var chunk = process.stdin.read()
  if (chunk !== null) {
    buf += chunk
  }
});
process.stdin.on('end', () => {
  let tree = lazydom.fromHTML(buf)
  process.stdout.write(JSON.stringify(tree, null, 2))
});
